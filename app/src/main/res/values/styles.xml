<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/titillium_web_light</item>
        
        <item name="android:background">@color/colorTransparent</item>
        <item name="imageButtonStyle">@style/CommonButton</item>
        <item name="buttonStyle">@style/MainFragmentButton</item>
    </style>
    
    <style name="CommonButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="MainFragmentButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/titillium_web_semibold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Settings Activity Theme -->
    <style name="AppSettingsTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/titillium_web_light</item>
    </style>

</resources>
