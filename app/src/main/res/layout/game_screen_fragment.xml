<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameScreenFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_game_surface2"
    android:animateLayoutChanges="true"
    tools:context=".GameScreenFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/endStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/topMoveHelpLayout"
        app:layout_constraintEnd_toStartOf="@+id/rightControlsLayout"
        app:layout_constraintStart_toEndOf="@+id/leftControlsLayout"
        app:layout_constraintTop_toBottomOf="@+id/topDetailsLayout"
        app:rowCount="3">

        <ImageView
            android:id="@+id/endFigure1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_levels_icon"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/endFigure2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/endFigure3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/endFigure4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_play_icon"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/endFigure5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/endFigure6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_levels_icon"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/endFigure7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/endFigure8"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/endFigure9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_levels_icon"
            app:layout_column="2"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/startStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/bottomMoveHelpLayout"
        app:layout_constraintEnd_toStartOf="@+id/rightMoveHelpLayout"
        app:layout_constraintStart_toEndOf="@+id/leftMoveHelpLayout"
        app:layout_constraintTop_toBottomOf="@+id/topMoveHelpLayout"
        app:rowCount="3">

        <ImageView
            android:id="@+id/startFigure1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_levels_icon"
            android:textAlignment="center"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/startFigure2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/startFigure3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_play_icon"
            android:textAlignment="center"
            app:layout_column="2"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/startFigure4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_play_icon"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/startFigure5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/startFigure6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_levels_icon"
            android:textAlignment="center"
            app:layout_column="2"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/startFigure7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/startFigure8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_home_icon"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/startFigure9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_figure"
            android:src="@drawable/ic_levels_icon"
            android:textAlignment="center"
            app:layout_column="2"
            app:layout_gravity="center_horizontal|center_vertical"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/leftControlsLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="3dp"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="@+id/endStateLayout"
        app:layout_constraintEnd_toStartOf="@+id/endStateLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/endStateLayout"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/leftControlsHomeButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/description_gotohome"
            android:src="@drawable/ic_home_icon"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/leftControlsLevelsButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/description_gotolevels"
            android:src="@drawable/ic_levels_icon"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/leftControlsBackButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/description_goback"
            android:src="@drawable/ic_arrow_back_icon"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/rightControlsLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="6dp"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="@+id/endStateLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/endStateLayout"
        app:layout_constraintTop_toTopOf="@+id/endStateLayout"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/rightControlsPausePlayButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/description_pauseplay"
            android:src="@drawable/ic_pause_icon"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/rightControlsStopButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/description_stop"
            android:src="@drawable/ic_stop_icon"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/rightControlsRetryButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/description_retry"
            android:src="@drawable/ic_retry_icon"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/topDetailsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        app:columnCount="4"
        app:layout_constraintBottom_toTopOf="@+id/endStateLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="1">

        <ImageView
            android:id="@+id/topDetailsClockIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/description_clock_icon"
            android:src="@drawable/ic_clock_icon"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="0" />

        <TextView
            android:id="@+id/rightControlsGameDuration"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:text="@string/placeholder_game_duration"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/topDetailsStepsIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/description_steps_icon"
            android:src="@drawable/ic_steps_icon"
            app:layout_column="2"
            app:layout_gravity="center_vertical"
            app:layout_row="0" />

        <TextView
            android:id="@+id/topDetailsStepCount"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:text="@string/placeholder_text_steps"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:layout_column="3"
            app:layout_gravity="center_vertical"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/leftMoveHelpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/startStateLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startStateLayout"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/leftHelp1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_inversion_icon"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/leftHelp2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_inversion_icon"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/leftHelp3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_inversion_icon"
            app:layout_column="0"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/topMoveHelpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/startStateLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endStateLayout"
        app:rowCount="1">

        <ImageButton
            android:id="@+id/topHelp1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_inversion_icon"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/topHelp2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_inversion_icon"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/topHelp3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_inversion_icon"
            app:layout_column="2"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/rightMoveHelpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startStateLayout"
        app:layout_constraintTop_toTopOf="@+id/startStateLayout"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="3">

        <ImageButton
            android:id="@+id/rightHelp1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_rotation_icon"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/rightHelp2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_rotation_icon"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/rightHelp3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_rotation_icon"
            app:layout_column="0"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/bottomMoveHelpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startStateLayout"
        app:rowCount="1">

        <ImageButton
            android:id="@+id/bottomHelp1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_rotation_icon"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/bottomHelp2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_rotation_icon"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/bottomHelp3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/description_inversion_action"
            android:src="@drawable/ic_rotation_icon"
            app:layout_column="2"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>